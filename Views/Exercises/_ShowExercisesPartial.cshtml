@model IEnumerable<NutriFitWeb.Models.Exercise>

@{
    ViewData["Title"] = "Exercícios";
}

<h1>@ViewData["Title"]</h1>

<div class="listsDiv">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseRepetitions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseMuscles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExerciseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExerciseDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExerciseDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExerciseRepetitions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExerciseURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExerciseType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExerciseMuscles)
            </td>
            <td>
                <a asp-action="DeleteExercise" asp-controller="Exercises" method="post" data-ajax="true" data-ajax-update="#_ShowExercisesPartialList"
                asp-route-id="@item.ExerciseId">Delete</a>
            </td>
        </tr>
        }
        
}
    </tbody>
</table>
</div>
