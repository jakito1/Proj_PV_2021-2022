@model NutriFitWeb.Models.Exercise


<div class="col-md-12 listsDiv exercisesDiv">
    <h2>Criar exercício</h2>
    <form method="post" id="_CreateExercisePartialForm" data-ajax-begin="UpdateCreateExercise" data-ajax-success="UpdateExercisesList" 
        data-ajax-complete="RefreshUnobtrusiveValidation" data-ajax="true"
        asp-action="CreateExercise" asp-controller="Exercises">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            <label asp-for="ExerciseName" class="control-label labelThree">Nome &nbsp;</label>
            <input required asp-for="ExerciseName" class="formsInput"
                   oninvalid="this.setCustomValidity('Campo obrigatório')"
                   onchange="this.setCustomValidity('')" />
            <span asp-validation-for="ExerciseName" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ExerciseDescription" class="control-label labelFour">Descrição</label>
            <input asp-for="ExerciseDescription" class="formsInput" />
            <span asp-validation-for="ExerciseDescription" class="text-danger"></span>
        </div>
        <div class="divTest">
            <label asp-for="ExerciseDuration" class="control-label labelThree">Duração</label>
            <input asp-for="ExerciseDuration" class="formsInput" />
        <div class="form-group">
            <label asp-for="ExerciseDuration" class="control-label">Duração</label>
            <input asp-for="ExerciseDuration" min ="0"
                oninput="this.value = Math.abs(this.value) > 0 ? Math.abs(this.value) : null" class="form-control" />
            <span asp-validation-for="ExerciseDuration" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ExerciseRepetitions" class="control-label">Repetições</label>
            <input asp-for="ExerciseRepetitions" min ="0"
                oninput="this.value = Math.abs(this.value) > 0 ? Math.abs(this.value) : null" class="form-control" />
        <div>
            <label asp-for="ExerciseRepetitions" class="control-label labelTwo">Repetições</label>
            <input asp-for="ExerciseRepetitions" class="formsInput" />
            <span asp-validation-for="ExerciseRepetitions" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ExerciseURL" class="control-label labelOne">Link do Exercício</label>
            <input asp-for="ExerciseURL" class="formsInput" />
            <span asp-validation-for="ExerciseURL" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ExerciseType" class="control-label labelOne">Tipo de Exercício</label>
            <select asp-for="ExerciseType" class="formsInput" asp-items="Html.GetEnumSelectList<ExerciseType>()"></select>
            <span asp-validation-for="ExerciseType" class="text-danger"></span>
        </div>
        <br />
        <div>
            <label asp-for="ExerciseMuscles" class="control-label">Músculos Trabalhados</label>
            <select asp-for="ExerciseMuscles" class="formsInput" asp-items="Html.GetEnumSelectList<ExerciseMuscles>()"></select>
            <span asp-validation-for="ExerciseMuscles" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Adicionar" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
