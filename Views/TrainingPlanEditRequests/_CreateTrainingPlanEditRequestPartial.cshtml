@model NutriFitWeb.Models.TrainingPlanEditRequest

<div class="row">
    <div class="col-md-4">
        <form asp-controller="TrainingPlanEditRequests" asp-action="CreateTrainingPlanEditRequest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TrainingPlanId" />
            <div class="form-group">
                <label asp-for="TrainingPlanEditRequestDescription" class="control-label"></label>
                <input asp-for="TrainingPlanEditRequestDescription" class="form-control" />
                <span asp-validation-for="TrainingPlanEditRequestDescription" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Pedir Edição" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
