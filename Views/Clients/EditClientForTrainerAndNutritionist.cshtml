@model NutriFitWeb.Models.Client

@{
    ViewData["Title"] = "Editar perfil do Cliente";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="col-md-8 profileDivs">
    <form asp-action="EditClientForTrainerAndNutritionist">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ClientId" />      
        <div class="form-group">
            <label asp-for="Weight" class="control-label listsItemTitle"></label>
            <input asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Height" class="control-label listsItemTitle"></label>
            <input asp-for="Height" class="form-control" />
            <span asp-validation-for="Height" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </form>
</div>

<div class="backBtnDiv">
    <a asp-action="ShowClients" class="backToListBtn">Voltar</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
