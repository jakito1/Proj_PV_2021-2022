@model NutriFitWeb.Models.Client
@using NutriFitWeb.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<UserAccountModel> UserManager

@{
    ViewData["Title"] = "Editar perfil do Cliente";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="col-md-8 profileDivs">
    <form asp-action="EditClientSettings" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ClientId" />
        <div class="form-group">
            <label asp-for="Photo" class="control-label listsItemTitle">Foto de Perfil</label>
            <input type="file" asp-for="Photo" class="form-control" name="formFile"/>
            <span asp-validation-for="Photo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ClientFirstName" class="control-label listsItemTitle"></label>
            <input asp-for="ClientFirstName" class="form-control" />
            <span asp-validation-for="ClientFirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ClientLastName" class="control-label listsItemTitle"></label>
            <input asp-for="ClientLastName" class="form-control" />
            <span asp-validation-for="ClientLastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ClientBirthday" class="control-label listsItemTitle"></label>
            <input asp-for="ClientBirthday" class="form-control" />
            <span asp-validation-for="ClientBirthday" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Weight" class="control-label listsItemTitle"></label>
            <input asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Height" class="control-label listsItemTitle"></label>
            <input asp-for="Height" class="form-control" />
            <span asp-validation-for="Height" class="text-danger"></span>
        </div>
    </form>
    @*@if(Model.ProfilePhoto is not null)
    {
        <img src="@ViewBag.ImageDataUrl" />
    }else{*@
        <form asp-action="UploadProfilePhoto" asp-controller="Clients" method="post" enctype="multipart/form-data">
            <input type="file" id="file" name="file" />
            <button type="submit">Upload File(s)</button>
        </form>
    @*}*@
</div>

@if (User.IsInRole("administrator"))
{
    <div class="backBtnDiv">
    
        <a asp-controller="Admins" asp-action="ShowAllUsers" class="backToListBtn">Voltar</a>
    </div>
}


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
