        <dt class = "col-sm-2 listsItemTitle">
            @Html.DisplayNameFor(Model => Model.Height)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Height == null || Model.Height == 0)
            {
                <p>N/A</p>
            }else
            {
                @Html.DisplayFor(Model => Model.Height)
            }
