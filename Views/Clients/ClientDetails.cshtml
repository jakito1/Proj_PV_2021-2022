@model NutriFitWeb.Models.Client

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do Cliente</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 listsItemTitle">
            @Html.DisplayNameFor(Model => Model.ClientId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(Model => Model.ClientId)
        </dd>

        <dt class = "col-sm-2 listsItemTitle">
            @Html.DisplayNameFor(Model => Model.UserAccountModel.UserName)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.UserAccountModel.UserName == null || Model.UserAccountModel.UserName == "")
            {
                <p>N/A</p>
            }else{
                @Html.DisplayFor(Model => Model.UserAccountModel.UserName)
            }
        </dd>

        <dt class = "col-sm-2 listsItemTitle">
            @Html.DisplayNameFor(Model => Model.ClientFirstName)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.ClientFirstName == null || Model.ClientFirstName == "")
            {
                <p>N/A</p>
            }else{
                @Html.DisplayFor(Model => Model.ClientFirstName)
            }
        </dd>
        <dt class = "col-sm-2 listsItemTitle">
                @Html.DisplayNameFor(Model => Model.ClientLastName)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.ClientLastName == null || Model.ClientLastName == "")
            {
                <p>N/A</p>
            }else{
                @Html.DisplayFor(Model => Model.ClientLastName)
            }
        </dd>
        <dt class = "col-sm-2 listsItemTitle">
            @Html.DisplayNameFor(Model => Model.ClientAge)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.ClientLastName == null || Model.ClientLastName == "")
            {
                <p>N/A</p>
            }else{
                @Html.DisplayFor(Model => Model.ClientAge)
            }
        </dd>
        <dt class = "col-sm-2 listsItemTitle">
            @Html.DisplayNameFor(Model => Model.Weight)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Weight == null || Model.Weight == 0)
            {
               <p>N/A</p>
