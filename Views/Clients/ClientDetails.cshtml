        <dd class = "col-sm-10">
            @if (Model.Gym == null || Model.Gym.GymName == null || Model.Gym.GymName == "")
            {
                <p>N/A</p>
            }else
            {
                @Html.DisplayFor(Model => Model.Gym.GymName)
            }
        </dd>
    </dl>
</div>
