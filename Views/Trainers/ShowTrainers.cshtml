@model IEnumerable<NutriFitWeb.Models.Trainer>
@using NutriFitWeb.Models
@using NutriFitWeb.Services
@using Microsoft.AspNetCore.Identity
@inject SignInManager<UserAccountModel> SignInManager
@inject UserManager<UserAccountModel> UserManager

@{
    ViewData["Title"] = "ShowTrainers";
}

@{string? routeUrl = Url.RouteUrl(ViewContext.RouteData.Values);}
@{string? qsPath = ViewContext.HttpContext.Request.QueryString.Value;}
@{string? returnUrl = $"{routeUrl}{qsPath}";}

<h1>Treinadores</h1>

<form asp-action="ShowTrainers" asp-route-id=email method="get">
    <input type="text" name="email" placeholder="Insira o email do utilizador" class="searchBar"/>
    <button type="submit" class="searchBtn"><i class="fa fa-search"></i></button>
</form>

@foreach (var item in Model) {
    <div class="listsDiv">
        <b class="listsItem listsItemTitle">@Html.DisplayNameFor(model => model.UserAccountModel.UserName):</b>
        <p class="listsItem">@Html.DisplayFor(modelItem => item.UserAccountModel.UserName)</p>
        <br>
        <b class="listsItem listsItemTitle">@Html.DisplayNameFor(model => model.UserAccountModel.Email):</b>
        <p class="listsItem">@Html.DisplayFor(modelItem => item.UserAccountModel.Email)</p>
        <div class="listsItem">
            @if(item.Gym == null){
                <a asp-action="AddTrainerToGym" asp-route-id="@item.TrainerId" asp-route-url=@returnUrl><img class="addIcon icons" src="~/icons/addIcon.svg" alt="addIcon"/></a>
            }else if(UserManager.GetUserId(User) == item.Gym.UserAccountModel.Id){                   
                <a asp-action="RemoveTrainerFromGym" asp-route-id="@item.TrainerId" asp-route-url=@returnUrl><img class="removeIcon icons" src="~/icons/removeIcon.svg" alt="removeIcon"/></a> 
            }

            <a asp-action="TrainerDetails" asp-route-id="@item.TrainerId">
                <img class="detailsIcon icons" src="~/icons/detailsIcon.svg" alt="detailsIcon"/>
            </a>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(qsPath))
{
    <div class="backBtnDiv">
        <a asp-action="ShowTrainers" class="backToListBtn">Voltar</a>
    </div>
}
