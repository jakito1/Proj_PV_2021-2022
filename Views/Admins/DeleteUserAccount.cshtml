@model NutriFitWeb.Models.UserAccountModel


<h2>Tem a certeza que pretende desativar esta conta?</h2>
<div class="col-md-6 profileDivs">
<table class="formTables">
    <tr>
        <th><p class="control-label listsItemTitle">Username</p></th>
        <td><p class="itemsLeftMargin"><b>@Html.DisplayFor(model => model.UserName)</b></p></td>
    </tr>
    <tr>
        <th><p class="control-label listsItemTitle">Email</p></th>
        <td><p><b>@Html.DisplayFor(model => model.Email)</b></p></td>
    </tr>
</table>

<form asp-action="DeleteUserAccount">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Desativar Conta" class="btn btn-danger" />
</form>
</div>

<div class="backBtnDiv">
    <a asp-action="ShowAllUsers" class="backToListBtn">Voltar</a>
</div>