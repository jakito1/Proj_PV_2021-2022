@model IEnumerable<NutriFitWeb.Models.UserAccountModel>

@{
    ViewData["Title"] = "ShowAllUsers";
}

<h1>ShowAllUsers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>        
            <td>
                <a asp-action="EditUserSettings" asp-route-id="@item.Id">Edit</a>
                <a asp-action="DeleteUserAccount" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
