@model IEnumerable<NutriFitWeb.Models.UserAccountModel>
@using NutriFitWeb.Services

@inject IIsUserInRoleByUserId IsUserInRoleByUserId

@{
    ViewData["Title"] = "ShowAllUsers";
}

@{string? routeUrl = Url.RouteUrl(ViewContext.RouteData.Values);}
@{string? qsPath = ViewContext.HttpContext.Request.QueryString.Value;}
@{string? returnUrl = $"{routeUrl}{qsPath}";}

<h1>Lista de Utilizadores</h1>
<form asp-action="ShowAllUsers" asp-route-id=email method="get">
    <input type="text" name="email" placeholder="Insira o email do utilizador" class="searchBar"/>
    <button type="submit" class="searchBtn"><img class="searchIcon" src="~/icons/searchIcon.svg" alt="searchIcon"/></button>
</form>
@foreach (var item in Model) {

    <div class="listsDiv">
         <b class="listsItem listsItemTitle">@Html.DisplayNameFor(model => model.UserName):</b>
         <p class="listsItem">@Html.DisplayFor(modelItem => item.UserName)</p>
         <br>
         <b class="listsItem listsItemTitle">@Html.DisplayNameFor(model => model.Email):</b>
         <p class="listsItem">@Html.DisplayFor(modelItem => item.Email)</p>
         <div class="listsItem">
            <a asp-action="DeleteUserAccount" asp-route-id="@item.Id" asp-route-url=@returnUrl><img class="removeIcon icons" src="~/icons/removeIcon.svg" alt="removeIcon"/></a> 

            <a asp-action="EditUserSettings" asp-route-id="@item.Id" ><img class="editProfileIcon icons" src="~/icons/editIcon.svg" alt="editIcon"/></a>

            @if (await IsUserInRoleByUserId.IsUserInRoleByUserIdAsync(item.Id, "client"))
            {
                <a asp-controller="Clients" asp-action="EditClientSettings" asp-route-id="@item.Id">
                    <img class="editIcon" src="~/icons/editProfileIcon.svg" alt="editProfileIcon"/>
                </a>
            }
         </div>

    </div>
        @*<tr style="margin:10px">
            <td>
                <b>@Html.DisplayNameFor(model => model.UserName):</b>
                @Html.DisplayFor(modelItem => item.UserName)
                <a asp-action="DeleteUserAccount" asp-route-id="@item.Id" class="fas fa-minus-circle icons"></a>
                <br>
                <b>@Html.DisplayNameFor(model => model.Email):</b>
                @Html.DisplayFor(modelItem => item.Email)
            </td>      
            <td>
                <a asp-action="EditUserSettings" asp-route-id="@item.Id">Edit</a>
                
            </td>
        </tr>*@
}
@if (!string.IsNullOrEmpty(qsPath))
{
    <a asp-action="ShowAllUsers" class="backToListBtn">Voltar</a>
}

