@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @if (User.IsInRole("gym"))
    {
        <partial name="~/Views/Gyms/_GymHome.cshtml" />
    }
    else if (User.IsInRole("administrator"))
    {
        <partial name="~/Views/Admins/_AdminHome.cshtml" />
    }
    else if (User.IsInRole("trainer"))
    {
        <partial name="~/Views/Trainers/_TrainerHome.cshtml" />
    }
    else if (User.IsInRole("nutritionist"))
    {
        <partial name="~/Views/Nutritionists/_NutritionistHome.cshtml" />
    }else if (User.IsInRole("client"))
    {
        <partial name="~/Views/Clients/_ClientHome.cshtml" />
    }
    else
    {
        <h1 class="notLoggedInHome">Bem Vindo ao <b class="nutriFitHome">NutriFit</b></h1>
        <img src="~/images/MainPageNotLoggedIn.png" alt="MainPageWithoutLoginImage" class="notLoggedInHome imageHome" />
        <p class="notLoggedInHome"><b>Planeie os seus treinos e planos alimentares com diversos profissionais do seu ginásio ou outros ginásios aderentes!</b></p>
    }
</div>
