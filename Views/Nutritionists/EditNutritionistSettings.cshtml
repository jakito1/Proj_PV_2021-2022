@model NutriFitWeb.Models.Nutritionist

@{
    ViewData["Title"] = "Editar perfil do Nutricionista";
}

<h1>@ViewData["Title"]</h1>

<div class="col-md-4 profileDivs">
    <form asp-action="EditNutritionistSettings" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="NutritionistId" />
        <div class="form-group">
            <label asp-for="NutritionistProfilePhoto" class="control-label listsItemTitle">Foto de Perfil</label>
            @if(Model.NutritionistProfilePhoto is not null)
            {
                <img class="profilePhoto" src="@Model.NutritionistProfilePhoto.PhotoUrl" />
            }
            <input type="file" asp-for="NutritionistProfilePhoto" class="form-control marginFixChooseFile" name="formFile"/>
            <span asp-validation-for="NutritionistProfilePhoto" class="text-danger"></span>
        </div>

        <table class="formTables">
                <tr>
                    <th class="alignTableTitles"><label asp-for="NutritionistFirstName" class="control-label listsItemTitle"></label></th>
                    <td>
                        <input asp-for="NutritionistFirstName" class="formsInput" />
                        <span asp-validation-for="NutritionistFirstName" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th class="alignTableTitles"><label asp-for="NutritionistLastName" class="control-label listsItemTitle"></label></th>
                    <td>
                        <input asp-for="NutritionistLastName" class="formsInput" />
                        <span asp-validation-for="NutritionistLastName" class="text-danger"></span>
                    </td>
                </tr>
        </table>

        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </form>
</div>
<div class="backBtnDiv">
    @if (User.IsInRole("administrator"))
    {
        <a asp-controller="Admins" asp-action="ShowAllUsers" class="backToListBtn">Voltar</a>
    }
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
