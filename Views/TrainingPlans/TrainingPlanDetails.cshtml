@model NutriFitWeb.Models.TrainingPlan

@{
    ViewData["Title"] = "Detalhes do Plano de Treino";
}

<h1>@ViewData["Title"]</h1>
<div class="col-md-12 profileDivs">
    <dl class="row">
        @if (User.IsInRole("client") && Model.Trainer is not null)
        {
            <dd class="col-sm-12">
                <p class="details"><b class="col-sm-12 listsItemTitle">Treinador</b> &nbsp; @Html.DisplayFor(model => model.Trainer.UserAccountModel.UserName)</p>
            </dd>
        }
        @if (User.IsInRole("trainer") && Model.Client is not null)
        {
            <dd class="col-sm-12">
                <p class="details"><b class="col-sm-12 listsItemTitle">Cliente</b> &nbsp; @Html.DisplayFor(model => model.Client.UserAccountModel.UserName)</p>
            </dd>
        }
        <dd class="col-sm-12">
            <p class="details"><b class="col-sm-12 listsItemTitle">Nome</b> &nbsp; @Html.DisplayFor(model => model.TrainingPlanName)</p>
        </dd>
        <dd class="col-sm-12">
            @if (Model.TrainingPlanDescription is null || Model.TrainingPlanDescription == "")
            {
                <p class="details"><b class="col-sm-12 listsItemTitle">Descrição</b> &nbsp; N/A</p>
            }
            else
            {
                <p class="details"><b class="col-sm-12 listsItemTitle">Descrição</b> &nbsp; @Html.DisplayFor(model => model.TrainingPlanDescription)</p>
            }
        </dd>
    </dl>
    <div id="_ShowExercisesPartialList" class="exercisesDetailsDiv">
        <partial name="~/Views/Exercises/_ShowExercisesDetailsPartial.cshtml" model=@Model.Exercises />
    </div>
    <br />
</div>
<div class="backBtnDiv">
    <a asp-action="ShowTrainingPlans" class="backToListBtn">Voltar</a>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}