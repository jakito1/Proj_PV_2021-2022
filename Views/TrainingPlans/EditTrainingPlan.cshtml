@model NutriFitWeb.Models.TrainingPlan

<h1>Editar plano de treino</h1>

<div class="col-md-12 profileDivs">
    <form asp-controller="TrainingPlans" asp-action="EditTrainingPlan">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="submit" value="Editar" class="btn btn-primary createBtn" />
        </div>
        <div class="form-group">
            <label asp-for="TrainingPlanName" class="control-label">Nome &emsp; &nbsp;</label>
            <input asp-for="TrainingPlanName" class="formsInput" aria-required="true" />
            <br />
            <span asp-validation-for="TrainingPlanName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TrainingPlanDescription" class="control-label">Descrição &nbsp;</label>
            <textarea asp-for="TrainingPlanDescription" class="descriptionBox"></textarea>
            <span asp-validation-for="TrainingPlanDescription" class="text-danger"></span>
        </div>
    </form>
    <div id="_CreateExercisePartialItem">
        <partial name="~/Views/Exercises/_CreateExercisePartial.cshtml" model=@Model.Exercise />
    </div>
    <div id="_ShowExercisesPartialList">
        <partial name="~/Views/Exercises/_ShowExercisesPartial.cshtml" model=@Model.Exercises />
    </div>
</div>

<div class="backBtnDiv">
    <a asp-action="ShowTrainingPlans" class="backToListBtn">Voltar</a>
</div>

