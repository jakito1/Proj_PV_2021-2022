@model NutriFitWeb.Models.Machine


<h1>Criar Máquina</h1>

    <div class="col-md-8 profileDivs">
        <form asp-action="CreateMachine" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>

            <div class="form-group">
                <label asp-for="MachineProfilePhoto" class="control-label">Foto da Máquina</label>
                <input type="file" asp-for="MachineProfilePhoto" class="form-control marginFixChooseFile" name="formFile"/>
                <span asp-validation-for="MachineProfilePhoto" class="text-danger"></span>
            </div>

            <table class="formTables">
            <tr>
                <th class="alignTableTitles"><label asp-for="MachineName" class="control-label">Nome</label></th>
                <td>
                    <input asp-for="MachineName" class="formsInput" />
                    <br />
                    <span asp-validation-for="MachineName" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th><label asp-for="MachineDescription" class="control-label">Descrição</label></th>
                <td>
                    <textarea asp-for="MachineDescription" class="descriptionBox"></textarea>
                    <span asp-validation-for="MachineDescription" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th class="alignTableTitles"><label asp-for="MachineType" class="control-label">Tipo</label></th>
                <td>
                    <select asp-for="MachineType" class="formsInput" asp-items="@Html.GetEnumSelectList<MachineType>()"></select>
                    <span asp-validation-for="MachineType" class="text-danger"></span>
                </td>
            </tr>
            </table>
        </form>

        <div id="_CreateExercisePartialItem">
            <partial name="~/Views/Exercises/_CreateExercisePartial.cshtml" />
        </div>
        <div id="_ShowExercisesPartialList" class="exListMargin">
            <partial name="~/Views/Exercises/_ShowExercisesPartial.cshtml" />
        </div>
    </div>

<div class="backBtnDiv">
    <a asp-action="ShowMachines" class="backToListBtn">Voltar</a>
</div>

