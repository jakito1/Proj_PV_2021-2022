@using NutriFitWeb.Services
@model NutriFitWeb.Models.Machine
@inject IPhotoManagement PhotoManagement


<h1>Detalhes da Máquina</h1>
<div class="col-md-8 profileDivs exercisesDiv">
        <div>
            @{
                string? machinePhoto = PhotoManagement.GetPhotoPath(@Model.MachineProfilePhoto); 
             }
            @if(Model.MachineProfilePhoto is not null)
            {
                <div><img class="profilePhoto" src="@machinePhoto" /></div>
                <br />
            }
        </div>
        <table class="formTables">
            <tr>
                <th><p class="control-label listsItemTitle">Nome</p></th>
                <td>
                    <p class="itemsLeftMargin">@Html.DisplayFor(model => model.MachineName)</p>
                </td>       
            </tr>
            <tr>
                <th><p class="control-label listsItemTitle">Descrição</p></th>
                <td>
                    <p class="itemsLeftMargin">@Html.DisplayFor(model => model.MachineDescription)</p>
                </td>       
            </tr>
            <tr>
                <th><p class="control-label listsItemTitle">Tipo</p></th>
                <td>
                    <p class="itemsLeftMargin">@Html.DisplayFor(model => model.MachineType)</p>
                </td>       
            </tr>
        </table>
        <table class="formTables">
            <tr>
                <th><p style="margin-bottom: 1em !important;" class="control-label listsItemTitle">Código QR</p></th>     
            </tr>
            <tr>
                <td>
                    <div id="qrCode"></div>
                    <div id="qrCodeData" data-url="@Model.MachineQRCodeUri"></div>
                </td>
            </tr>
        </table>
        @if (Model.MachineExercises is not null && Model.MachineExercises.Any())
        {
            <br />
            <div id="_ShowExercisesPartialList" class="plansListDetailsDiv">
                <partial name="~/Views/Exercises/_ShowExercisesDetailsPartial.cshtml" model=@Model.MachineExercises />
            </div>
        }
</div>

<div class="backBtnDiv">
    <a asp-action="ShowMachines" class="backToListBtn">Voltar</a>
</div>


